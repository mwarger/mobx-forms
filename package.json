{
  "name": "mobx-forms",
  "version": "0.1.3",
  "description": "A simple form management for Mobx & React.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "build:lib": "babel src --out-dir lib --ignore **/__tests__/",
    "build:umd": "webpack src/index.js dist/mobx-forms.js",
    "build:umd:min": "NODE_ENV=production webpack src/index.js dist/mobx-forms.min.js",
    "build:examples": "webpack examples/index.jsx examples/bundle.js --config examples/webpack.config.js",
    "clean": "rimraf lib dist",
    "prepublish": "npm run clean && npm test && npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oreqizer/mobx-forms.git"
  },
  "keywords": [
    "form",
    "forms",
    "mobx",
    "react"
  ],
  "author": "oreqizer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oreqizer/mobx-forms/issues"
  },
  "homepage": "https://github.com/oreqizer/mobx-forms#readme",
  "devDependencies": {
    "@types/enzyme": "^2.4.36",
    "@types/invariant": "^2.2.28",
    "@types/ramda": "0.0.2",
    "@types/react": "^0.14.39",
    "@types/react-dom": "^0.14.17",
    "enzyme": "^2.4.1",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "jest": "^16.0.1",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "semver": "^5.3.0",
    "ts-loader": "^0.8.2",
    "typescript": "^2.0.3",
    "typescript-eslint-parser": "^0.4.0",
    "webpack": "^2.1.0-beta.25"
  },
  "peerDependencies": {
    "react": "^15.3.1",
    "mobx": "^2.4.3",
    "mobx-react": "^3.5.5"
  },
  "dependencies": {
    "invariant": "^2.2.1",
    "ramda": "^0.22.1"
  },
  "files": [
    "dist",
    "lib",
    "README.md",
    "LICENSE"
  ]
}
