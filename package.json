{
  "name": "mobx-forms",
  "version": "0.1.0",
  "description": "A simple form management for Mobx & React.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "build:lib": "babel src --out-dir lib --ignore **/__tests__/",
    "build:umd": "webpack src/index.js dist/mobx-forms.js",
    "build:umd:min": "NODE_ENV=production webpack src/index.js dist/mobx-forms.min.js",
    "build:examples": "webpack examples/index.jsx examples/bundle.js --config examples/webpack.config.js",
    "clean": "rimraf lib dist",
    "prepublish": "npm run clean && npm test && npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oreqizer/mobx-forms.git"
  },
  "keywords": [
    "form",
    "forms",
    "mobx",
    "react"
  ],
  "author": "oreqizer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oreqizer/mobx-forms/issues"
  },
  "homepage": "https://github.com/oreqizer/mobx-forms#readme",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-jest": "^15.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.13.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^11.0.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "jest": "^15.1.1",
    "react-addons-test-utils": "^15.3.1",
    "react-dom": "^15.3.1",
    "semver": "^5.3.0",
    "webpack": "^2.1.0-beta.21"
  },
  "peerDependencies": {
    "react": "^15.3.1",
    "mobx": "^2.4.3",
    "mobx-react": "^3.5.5"
  },
  "dependencies": {
    "invariant": "^2.2.1",
    "ramda": "^0.22.1"
  },
  "files": [
    "dist",
    "lib",
    "README.md",
    "LICENSE"
  ]
}
